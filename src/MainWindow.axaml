<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TodoListApp.MainWindow"
        Title="awesome to-do list"
        Width="800" Height="700"
        FontFamily="Comic Sans MS">
<Window.Background>
    <ImageBrush Source="avares://TodoListApp/Assets/image.png"/>
</Window.Background>

    <StackPanel Margin="20">
        <!-- Title -->
        <TextBlock Text="graphic design is my passion" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Horizontal layout: Task panel on left, Calendar on right -->
        <StackPanel Orientation="Horizontal" Spacing="40">

            <!-- Left panel: tasks -->
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBox x:Name="TaskInput" Width="250" Watermark="Enter a task..."/>
                    <Button x:Name="AddButton" Content="Add" Margin="10,0,0,0" Width="80"/>
                </StackPanel>

                <ListBox x:Name="TaskList" Height="300">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <CheckBox/>
                                <TextBlock Text="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button x:Name="DeleteButton" Content="Delete selected" Margin="0,10,0,0"/>
                <Button x:Name="SaveButton" Content="Save to JSON" Margin="0,10,0,0" Width="150"/>
                <Button x:Name="LoadButton" Content="Load" Margin="0,10,0,0" Width="80"/>
            </StackPanel>

            <!-- Right panel: calendar -->
            <StackPanel Orientation="Vertical">
                <Calendar x:Name="calendar" SelectionMode="MultipleRange"/>
                <TextBlock Margin="20" Text="{Binding #calendar.SelectedDate}"/>
                <Image Margin="20" Height="200" Width="200" Source="avares://TodoListApp/Assets/flush.jpeg"/>
            </StackPanel>


        </StackPanel>
    </StackPanel>
</Window>
